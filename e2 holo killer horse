@name killer horse (kills people with epilepsy)
@persist PosE2:vector

event tick(){

    PosE2=entity():pos()
    HoloHALO=holoCreate(1)
    holoScale(1,vec(20))
    holoPos(1, PosE2)
    holoColor(1,vec(random(255),random(255),random(255)),255)
    holoAlpha(1,255)
    holoModel(1,"models/props_c17/statue_horse.mdl")
    holoMaterial(1,"models/debug/debugwhite")
    HoloHALO:setHalo(vec(random(255),random(255),random(255)))
}
#requires enextra core
